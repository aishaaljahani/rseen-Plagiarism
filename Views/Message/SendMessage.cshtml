@model Plagiarism.Models.Message

@{
    ViewBag.Title = "Send Message";
}

<div class="form-horizontal">
    <h4>@ViewBag.Title</h4>
    @using (Html.BeginForm("SendMessage", "Message", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("To", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <div class="controls">
                    @Html.DropDownList("MessageToId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Content", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <div class="controls">
                    <textarea name="Content" rows="10" cols="80" class="form-control"></textarea>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

