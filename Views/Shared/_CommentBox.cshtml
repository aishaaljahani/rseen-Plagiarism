<div class="form-horizontal">

    <dl>
        <dt>
            Reply
        </dt>

        <dd>
            <div>
                @using (Html.BeginForm("AddReply", "Message", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-lg-12">
                                <textarea name="ReplayText" id="ReplayText" required rows="5" style="width:100%;" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="hidden" name="MessageId" value="@ViewBag.MessageId" />
                                <input type="submit" id="btnSend" name="btnSend" value="Send" class="btn btn-warning" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </dd>

    </dl>
</div>
